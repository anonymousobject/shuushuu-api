# Environment
ENVIRONMENT=development
DEBUG=True

# Database (MySQL)
# Used by docker-compose for MySQL container
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_DATABASE=shuushuu
MYSQL_USER=shuushuu
MYSQL_PASSWORD=change_this_password

# Database URLs (used by application)
DATABASE_URL=mysql+aiomysql://shuushuu:change_this_password@localhost:3306/shuushuu?charset=utf8mb4
DATABASE_URL_SYNC=mysql+pymysql://shuushuu:change_this_password@localhost:3306/shuushuu?charset=utf8mb4

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (CHANGE THIS!)
# IMPORTANT: Generate a secure random secret key for production!
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long
ALGORITHM=HS256

# Task Queue
TASK_QUEUE_TYPE=background

# IQDB
IQDB_HOST=localhost
IQDB_PORT=5588

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Storage
# Path where uploaded images will be stored
# This path is used both inside the container and as the host mount point for Docker
STORAGE_PATH=/sakura/shuushuu/images

# Optional: S3 Configuration (if using S3 storage)
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_REGION=us-east-1

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM_EMAIL=noreply@e-shuushuu.net

# Frontend URL (for email links, etc.)
FRONTEND_URL=http://localhost:3000

# Test Database Configuration
# Tests use a separate database to ensure isolation from dev/prod
TEST_DATABASE_URL=mysql+aiomysql://shuushuu:change_this_password@localhost:3306/shuushuu_test?charset=utf8mb4
TEST_DATABASE_URL_SYNC=mysql+pymysql://shuushuu:change_this_password@localhost:3306/shuushuu_test?charset=utf8mb4

# Development Environment - Local HTTP only
ENVIRONMENT=development
DEBUG=True
COMPOSE_PROFILE=dev

# Domain/Host
DOMAIN=localhost
PROTOCOL=http

# Database (MariaDB) - Development credentials
MARIADB_ROOT_PASSWORD=dev_root_password
MARIADB_DATABASE=shuushuu_dev
MARIADB_USER=shuushuu_dev
MARIADB_PASSWORD=dev_password_insecure

# URLs (used by application)
DATABASE_URL=mysql+aiomysql://shuushuu_dev:dev_password_insecure@mariadb:3306/shuushuu_dev?charset=utf8mb4
DATABASE_URL_SYNC=mysql+pymysql://shuushuu_dev:dev_password_insecure@mariadb:3306/shuushuu_dev?charset=utf8mb4
REDIS_URL=redis://redis:6379/0
ARQ_REDIS_URL=redis://redis:6379/1

# Frontend/API Communication
IMAGE_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# CORS - Allow localhost for development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Security (DEVELOPMENT ONLY - change for production)
SECRET_KEY=dev-secret-key-not-secure-change-for-production-min-32-chars
ALGORITHM=HS256

# Task Queue
TASK_QUEUE_TYPE=background

# IQDB
IQDB_HOST=iqdb
IQDB_PORT=5588

# Storage
STORAGE_PATH=/sakura/shuushuu/testing

# Turnstile (Cloudflare CAPTCHA) - Test mode
TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

# ARQ
ARQ_MAX_TRIES=3
ARQ_KEEP_RESULT=3600

# Disable UV cache for consistent behavior across environments
UV_NO_CACHE=1

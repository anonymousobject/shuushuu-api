# Test Environment - Production-like with HTTPS
ENVIRONMENT=production
DEBUG=False
COMPOSE_PROFILE=test

# Domain/Host - Change this to your actual test domain
DOMAIN=test.shuushuu.com
PROTOCOL=https

# Database
MARIADB_ROOT_PASSWORD=change_this_root_password
MARIADB_DATABASE=shuushuu_test
MARIADB_USER=shuushuu_test
MARIADB_PASSWORD=change_this_password_for_test

# URLs (used by application)
DATABASE_URL=mysql+aiomysql://shuushuu_test:change_this_password_for_test@mariadb:3306/shuushuu_test?charset=utf8mb4
DATABASE_URL_SYNC=mysql+pymysql://shuushuu_test:change_this_password_for_test@mariadb:3306/shuushuu_test?charset=utf8mb4
REDIS_URL=redis://redis:6379/0
ARQ_REDIS_URL=redis://redis:6379/1

# Frontend/API Communication
IMAGE_BASE_URL=https://test.shuushuu.com
API_BASE_URL=https://test.shuushuu.com/api

# CORS - Allow test domain and localhost for development
CORS_ORIGINS=https://test.shuushuu.com,http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Security - CHANGE THESE! Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-secure-random-key-min-32-chars-for-production
ALGORITHM=HS256

# Task Queue
TASK_QUEUE_TYPE=background

# IQDB
IQDB_HOST=iqdb
IQDB_PORT=5588

# Storage
STORAGE_PATH=/sakura/shuushuu/testing

# Turnstile (Cloudflare CAPTCHA) - Get real keys from Cloudflare
TURNSTILE_SITE_KEY=your-real-site-key
TURNSTILE_SECRET_KEY=your-real-secret-key

# ARQ
ARQ_MAX_TRIES=3
ARQ_KEEP_RESULT=3600

# SSL Certificate paths (for Let's Encrypt)
# Ensure you've run: certbot certonly -d test.shuushuu.com
CERT_PATH=/etc/letsencrypt/live/test.shuushuu.com

# Disable UV cache for consistent behavior across environments
UV_NO_CACHE=1
